<% if @profile.errors.any? %>
  <ul>
  <% @profile.errors.full_messages.each do |e|%>
   <li><%= e %>
   <%end%>
  </ul>
<%end%>



<%=form_with model: @profile do |f| %>
    <div>   
    <%= f.label :name %>
    <%= f.text_field :name %>
    </div>
    
    <div> 
    <%= f.label :social %>
    <%= f.text_field :social %>
    </div>
    
    <div> 
    <%= f.label :birth %>
    <%= f.date_field :birth %>
    </div>
   
    <div> 
    <%= f.label :adress %>
    <%= f.text_field :adress %>
    </div>

    <div> 
    <%= f.label :city %>
    <%= f.text_field :city %>
    </div>
  
    <div> 
    <%= f.label :description %>
    <%= f.text_field :description %>
    </div>

    <div> 
    <%= f.label :experiences %>
    <%= f.text_field :experiences %>
    </div>
    

    <div> 
    <%= f.label :formation %>
    <%= f.text_field :formation %>
    </div>
    

    <div> 
    <%= f.label :area_id, "Especialidade" %> 
    <%= f.collection_select :area_id, Area.all, :id, :name, prompt: 'Escolha um tipo' %>
    </div>
    

   <%= f.submit 'Enviar' %>
<% end %>


