<%=form_with model: @profile do |f| %>
  <div>   
    <%= f.label :name %>
    <%= f.text_field :name %>
    </div>
    <br>
  
    <%= f.label :social %>
    <%= f.text_field :social %>
    </div>
    <br>

    <%= f.label :birth %>
    <%= f.date_field :birth %>
    </div>
    <br>

    <%= f.label :adress %>
    <%= f.text_field :adress %>
    </div>

    <%= f.label :city %>
    <%= f.text_field :city %>
    </div>
    <br>

    <%= f.label :description %>
    <%= f.text_field :description %>
    </div>

    <%= f.label :experiences %>
    <%= f.text_field :experiences %>
    </div>
    <br>

    <%= f.label :formation %>
    <%= f.text_field :formation %>
    </div>
    <br>

    <%= f.label :area_id, "Especialidade" %> 
    <%= f.collection_select :area_id, Area.all, :id, :name, prompt: 'Escolha um tipo' %>
    <br>

    <%= @profile.id%>

   <%= f.submit 'Enviar' %>
<% end %>


